{% extends '::base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-xs-6 col-sm-8">
            <ul class="nav nav-pills">
                <li class="active"><a href="#groupstage" data-toggle="tab">Groups</a></li>
                <li><a href="#knockout" data-toggle="tab">Knouckout</a></li>
            </ul>
        </div>
        <div class="col-xs-6 col-sm-4 text-right">
            <form action="{{ path('wc_userbundle_changetimezone') }}" method="post">
                <input type="hidden" name="csrf" value="{{ csrf_token('timezone') }}">
                <label>
                    Change timezone:
                    <select style="width:100%;line-height: 200%;" name="timezone" onchange="this.form.submit()">
                        {% for group,groups in timezones %}
                            <optgroup label="{{ group }}">
                                {% for key,val in groups %}
                                    <option value="{{ key }}" {% if key == timezone %}selected="selected"{% endif %}>{{ key }}</option>
                                {% endfor %}
                            </optgroup>
                        {% endfor %}
                    </select>
                </label>
            </form>
        </div>
    </div>

    {% if is_granted('ROLE_USER') %}
    <form action="{{ path('wc_userbundle_default') }}" method="post">
        <input type="hidden" name="csrf" value="{{ csrf_token('bets') }}" />
        <button type="submit" style="margin-top:20px;" class="btn btn-success btn-block">Save your bets</button>
    {% endif %}

        <div class="tab-content">
            <div class="tab-pane active" id="groupstage">
                {% include 'WcGameBundle:Default/_p:groupstage.html.twig' with {'stages': stages} %}
            </div>
            <div class="tab-pane" id="knockout">
                {% include 'WcGameBundle:Default/_p:knockout.html.twig' with {'stages': knockouts} %}
            </div>
        </div>
    {% if is_granted('ROLE_USER') %}
            <button type="submit" class="btn btn-success btn-block">Save your bets</button>
        </form>
        {% include 'WcGameBundle:Default/_p:modal.html.twig' %}
    {% endif %}
{% endblock %}